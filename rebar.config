%% test options
{cover_enabled, true}.

%% xref options
{xref_warnings, true}.
{xref_checks, [undefined_function_calls]}.

%% compiler options
{erl_opts, [
	debug_info, 
	fail_on_warning
]}.

%% deps list
{deps, [
	{pal, ".*", {git, "git://github.com/manifest/pal.git", {branch, develop}}},
	{jsxn, ".*", {git, "git://github.com/talentdeficit/jsxn.git", {branch, master}}},
	{cowlib, ".*", {git, "git://github.com/ninenines/cowlib.git", {branch, master}}},
	{hackney, ".*", {git, "git://github.com/benoitc/hackney.git", {branch, master}}}
]}.

