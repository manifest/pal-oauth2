%% test options
{cover_enabled, true}.

%% xref options
{xref_warnings, true}.
{xref_checks, [undefined_function_calls]}.

%% compiler options
{erl_opts, [
	debug_info, 
	fail_on_warning
]}.

%% deps list
{deps, [
	{pal, ".*", {git, "git://github.com/manifest/pal.git", {tag, "v0.2.0"}}},
	{jsxn, ".*", {git, "git://github.com/talentdeficit/jsxn.git", {tag, "v2.3.0"}}},
	{cowlib, ".*", {git, "git://github.com/ninenines/cowlib.git", {tag, "1.0.0"}}},
	{hackney, ".*", {git, "git://github.com/benoitc/hackney.git", {tag, "1.0.5"}}}
]}.

